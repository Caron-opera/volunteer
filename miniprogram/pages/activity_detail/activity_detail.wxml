<view class="box">
<view class="banner">
   <image src="{{activity.src}}" style="width: 100%;height: 500rpx;"></image>
</view>
<view class="bottom">
    <view class="left">{{activity.state}}</view>
    <view class="right">{{activity.num}}人报名/限{{activity.all_num}}</view>
  </view>
<!-- 大卡片 -->
<view class="bbox">
   <view class="card">
  <view class="name">{{activity.name}}</view>
  <view class="smallcard">
  <view class="icon">
  <image src="cloud://cloud1-9g9obnl0afaae9cb.636c-cloud1-9g9obnl0afaae9cb-1311278714/image/icon/时间.png" style="width: 45rpx;height:45rpx;"></image>
  <view>报名时间:{{activity.start_signtime}}至{{activity.end_signtime}}</view>
  </view>
  <view class="icon">
  <image src="cloud://cloud1-9g9obnl0afaae9cb.636c-cloud1-9g9obnl0afaae9cb-1311278714/image/icon/时间.png" style="width: 45rpx;height:45rpx;"></image>
  <view>活动时间:{{activity.start_time}}至{{activity.end_time}}</view>
  </view>
  <view class="icon">
  <image src="cloud://cloud1-9g9obnl0afaae9cb.636c-cloud1-9g9obnl0afaae9cb-1311278714/image/icon/地点.png" style="width: 45rpx;height:45rpx;"></image>
  <view>活动地址:{{activity.site}}</view>
  </view>
  </view>
</view>
</view>

<!-- 详细页面 -->
<view class="bbox">
  <view class="basic">
    <view class="name">
      <view>基本信息</view>
    </view>
    <view>负责团队：{{activity.team}}</view>
    <view>负责人：{{activity.person}}</view>
    <view>联系电话：{{activity.phone}}</view>
    <view>活动要求：{{activity.request}}</view>
    <view>活动简介：{{activity.detail}}</view>
  </view>
</view>

<!-- 底座 -->
<view class="base">没有了，已经到底了</view>

</view>
<!-- 按钮 -->
<view class="button" bindtap="join">参加活动</view>
