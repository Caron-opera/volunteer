/* 搜索框 */
.search {
   width: 100%;
   display: flex;
   height: 100rpx;
   flex-direction: column;
   justify-content: center;
   /* background-color: #ff6801; */
}
.search_input {
 width: 90%;
 height: 60rpx;
 display: flex;
 flex-direction: row;
 border: 1px solid #fff;
 border-radius: 50rpx;
 box-sizing: border-box;
 padding-left: 50rpx;
 padding-right: 50rpx;
 align-items: center;
 align-self: center;
 justify-content: space-between;
 background-color: #fff;
}
.search image{
   width: 50rpx;
   height: 50rpx;
}

.act_bigbox{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  width: 100%;
  align-items: center;
  justify-content: center;
}
.activity_box{
  display: flex;
  flex-direction: row;
  width: 680rpx;
  height: 200rpx;
  font-size: 25rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  /* border: 1px solid rgb(165, 161, 161); */
}
.activity_box .left {
  display: flex;
  align-items: center;
  align-self: center;
  justify-content: center;
  width: 35%;
  height: 100%;
  /* background-color: yellow; */
}
.activity_box .left image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
}
.activity_box .right{
  display: flex;
  flex-direction: column;
  width: 65%;
  height: 100%;
  padding: 20rpx 10rpx;
}
.activity_box .right .title {
  font-size: larger;
  font-weight: 600;
}
.state{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 50rpx;
  background-color: #abb5e4;
  color: white;
  border-radius: 30rpx;
}

/* 底座 */
.base{
  display: flex;
  width: 100%;
  justify-content: center;
  text-align: end;
  font-size: small;
  color: #afb0b3;
}

