
/* 搜索框 */
.search {
   width: 100%;
   display: flex;
   flex-direction: row;
   height: 100rpx;
   justify-content: center;
   /* background-color: #ff6801; */
}
.search_input {
 width: 80%;
 height: 60rpx;
 display: flex;
 flex-direction: row;
 border: 1px solid #fff;
 border-radius: 50rpx;
 box-sizing: border-box;
 padding-left: 50rpx;
 padding-right: 50rpx;
 align-items: center;
 align-self: center;
 justify-content: space-between;
 background-color: #fff;
}
.search_input image{
   width: 50rpx;
   height: 50rpx;
}
.add {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 10%;
}
.add image {
  width: 50rpx;
  height: 50rpx;
}
.team_bigbox{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.team_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  height: 300rpx;
  font-size: 25rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  /* border: 1px solid rgb(165, 161, 161); */
}
.name{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background-color: #abb5e4;
  color: white;
  border-radius: 40rpx;
  font-size: large;
  font-weight: 900;
  margin-bottom: 20rpx;
}
.leader {
  font-size: large;
}
.phone {
  font-size: large;
}
/* 底座 */
.base{
  display: flex;
  width: 100%;
  justify-content: center;
  text-align: end;
  font-size: small;
  color: #afb0b3;
}

