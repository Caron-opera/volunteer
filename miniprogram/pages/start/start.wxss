.page{
  background-color:  #7e7b7b;
}
.xbox{
   display: flex;
   align-items: center;
   justify-content: center;
   align-self: center;
}
/* 搜索框 */
.search {
   width: 100%;
   display: flex;
   height: 100rpx;
   flex-direction: column;
   justify-content: center;
   /* background-color: #ff6801; */
}
.search_input {
 width: 90%;
 height: 60rpx;
 display: flex;
 flex-direction: row;
 border: 1px solid #fff;
 border-radius: 50rpx;
 box-sizing: border-box;
 padding-left: 50rpx;
 padding-right: 50rpx;
 align-items: center;
 align-self: center;
 justify-content: space-between;
 background-color: #fff;
}
.search image{
   width: 50rpx;
   height: 50rpx;
}

/* 轮播图_新闻 */
.banner {
   display: flex;
   flex-direction: row;
   align-self: center;
   align-items: center;
   justify-content: center;
   width: 100%;
   height: 300rpx;
   /* background-color: #ff6801; */
 }
 .lunbo {
   width: 90%;
   height: 300rpx;
   border-radius: 20rpx;
   overflow: hidden;
 }
 .lunbo image {
     width: 100%;
     height: 100%;
     border-radius: 20rpx;
     overflow: hidden;
 }
 
 /* 分类栏 */
 .volunterr_function{
   display: flex;
   flex-direction: row;
   width: 90%;
   height: 160rpx;
   align-items: center;
   align-self: center;
   justify-content: space-between;
   margin-top: 5rpx;
   background-color: #fff;
   border-radius: 20rpx;
   margin-top: 10rpx;
}
.function_module {
   display: flex;
   width: 25%;
   height: 160rpx;
   flex-direction: column;
   align-items: center;
   align-self: center;
   justify-content: center;
   font-size: 10px;
   /* background-color: yellow; */
}
.function_module image{
   width: 60rpx;
   height: 60rpx;
}
.bottom {
   display: flex;
   flex-direction: row;
   justify-content: flex-end;
   padding-right: 10rpx;
}

/* 公告 */
.mess{
   display: flex;
   flex-direction: column;
   width: 90%;
   height: 150rpx;
   border-radius: 30rpx;
   margin-top: 20rpx;
   border: 1px solid rgb(165, 161, 161);
   background-color: white;
}
.title_box{
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: flex-start;
   font-size: 30rpx;
   margin-left: 20rpx;
   color: #fc0000;
}
.content{
   color: coral;
   font-size: 25rpx;
   margin-left: 100rpx;
   color: #000000;
}

/* 推荐 */
.act_bigbox{
   display: flex;
   flex-direction: column;
   flex-wrap: wrap;
   align-items: center;
   justify-content: center;
}
.activity_box{
   display: flex;
   flex-direction: column;
   width: 90%;
   height: 300rpx;
   font-size: 25rpx;
   background-color: white;
   margin: 20rpx;
   border-radius: 30rpx;
   box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
   /* border: 1px solid rgb(165, 161, 161); */
}
.activity_box .top{
   display: flex;
   flex-direction: row;
   height: 80%;
   width: 100%;
   /* background-color:darkgoldenrod; */
}
.activity_box .bottom {
   height: 20%;
   width: 100%;
   /* background-color: greenyellow; */
}
.activity_box .left {
   display: flex;
   align-items: center;
   align-self: center;
   justify-content: center;
   width: 35%;
   height: 100%;
   /* background-color: yellow; */
}
.activity_box .left image {
   width: 200rpx;
   height: 200rpx;
}
.activity_box .right{
   display: flex;
   flex-direction: column;
   width: 65%;
   height: 100%;
   padding: 40rpx 12rpx;
}
.state{
   display: flex;
   align-items: center;
   justify-content: center;
   width: 100rpx;
   height: 50rpx;
   background-color: #abb5e4;
   color: white;
   border-radius: 30rpx;
}
.sign_num{
   color: #9aa4d4;
   font-size: larger;
   font-weight: 600;
   margin-right: 40rpx;
}

/* 底座 */
.base{
   display: flex;
   width: 100%;
   justify-content: center;
   text-align: end;
   font-size: small;
   color: #afb0b3;
}