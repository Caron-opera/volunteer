.page{
  background-color:  #7e7b7b;
}
.box{
   display: flex;
   align-items: center;
   justify-content: center;
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 45rpx;
  width: 100%;
  background-color: #fff;
}
/* 搜索框 */
.search {
   width: 100%;
   display: flex;
   height: 100rpx;
   flex-direction: column;
   justify-content: center;
   /* background-color: #ff6801; */
}
.search_input {
 width: 90%;
 height: 60rpx;
 display: flex;
 flex-direction: row;
 border: 1px solid #fff;
 border-radius: 50rpx;
 box-sizing: border-box;
 padding-left: 50rpx;
 padding-right: 50rpx;
 align-items: center;
 align-self: center;
 justify-content: space-between;
 background-color: #fff;
}
.search image{
   width: 50rpx;
   height: 50rpx;
}

.person{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.person_box{
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 250rpx;
  font-size: 25rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  /* border: 1px solid rgb(165, 161, 161); */
}
.person_box .left {
  display: flex;
  align-items: center;
  align-self: center;
  justify-content: center;
  width: 35%;
  height: 100%;
  /* background-color: yellow; */
}
.person_box .left image {
  width: 200rpx;
  height: 200rpx;
}
.person_box .right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 65%;
  height: 160rpx;
  padding: 40rpx 12rpx;
  /* background-color: pink; */
}
.nickname{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  color: #36373a;
  font-size: large;
  font-weight:600;
  margin: 0 10rpx;
}
.right .skill_box{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  /* background-color: skyblue; */
}
.right .skill {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 50rpx;
  border-radius: 20rpx;
  background-color: #b1d1e6;
  color: white;
  font-size: larger;
}
.phone {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 50rpx;
  border-radius: 20rpx;
  background-color: #d1b1e6;
  color: white;
}
/* 底座 */
.base{
  display: flex;
  width: 100%;
  justify-content: center;
  text-align: end;
  font-size: small;
  color: #afb0b3;
}