
.act_bigbox{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  margin-top: 80rpx;
}
.activity_box{
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 300rpx;
  font-size: 25rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  /* border: 1px solid rgb(165, 161, 161); */
}
.activity_box .top{
  display: flex;
  flex-direction: row;
  height: 80%;
  width: 100%;
  /* background-color:darkgoldenrod; */
}
.activity_box .left {
  display: flex;
  align-items: center;
  align-self: center;
  justify-content: center;
  width: 35%;
  height: 100%;
  /* background-color: yellow; */
}
.activity_box .left image {
  width: 200rpx;
  height: 200rpx;
}
.activity_box .right{
  display: flex;
  flex-direction: column;
  width: 65%;
  height: 100%;
  padding: 40rpx 12rpx;
}
.state{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 50rpx;
  background-color: #abb5e4;
  color: white;
  border-radius: 30rpx;
}
.activity_box .bottom{
  display: flex;
  width: 90%;
  align-items: center;
  align-self: center;
  justify-content: center;
}
.task_list {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 30%;
  background-color: rgb(195, 217, 236);
  margin: 0 20rpx;
  border-radius: 20rpx;
  height: 50rpx;
}
.over{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 30%;
  background-color: rgb(223, 144, 112);
  margin: 0 20rpx;
  border-radius: 20rpx;
  height: 50rpx;
}
/* 底座 */
.base{
  display: flex;
  width: 100%;
  justify-content: center;
  text-align: end;
  font-size: small;
  color: #afb0b3;
}