.page{
  background-color:  #7e7b7b;
}
.box{
   display: flex;
   align-items: center;
   justify-content: center;
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 45rpx;
  width: 100%;
  background-color: #fff;
}
.task_list {
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.task_box{
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 400rpx;
  background-color: white;
  margin-top: 20rpx;
  border-radius: 40rpx;
  padding: 20rpx;
}
.left {
  display: flex;
  flex-direction: column;
  width: 80%;
}
.right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 15%;
  /* background-color: aqua; */
}
button{
  display: flex;
  justify-content: center;
  color: rgb(235, 104, 104);
  width: 30rpx;
  height: 300rpx;
  background-color: rgb(245, 241, 241);
}
