.page{
  background-color:  #7e7b7b;
}
.mess{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 250rpx;
  background-color: rgb(240, 234, 245);
}
.basic {
  display: flex;
  flex-direction: row;
  width: 85%;
}
.left{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  font-size: larger;
  color: green;
  /* background-color: pink; */
  font-weight: 700;
}
.right {
  width: 70%;
  color: rgb(155, 148, 148);
}
.repair{
  font-size: smaller;
  width: 15%;
}
.statistics_box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 300rpx;
}
.statistics{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 90%;
  height: 300rpx;
  margin-top: 40rpx;
  border-radius: 30rpx;
  background-color: white;
}
.figure {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 280rpx;
  /* background-color: skyblue; */
  border-radius: 10rpx;
  
}
.figure .box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #7e7b7b;
}
.figure .state {
  color: #7e7b7b;
}
.figure .num {
  color: #b1d1e6;
}
.other_box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin-top: 60rpx;
}
.other {
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: #fff;
  border-radius: 30rpx;
}
.xtitle {
  color: #7e7b7b;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-left: 30rpx;
}
.aq{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.aq .nav {
  display: flex;
  align-items: center;
  width: 200rpx;
  height: 100rpx;
  font-size: smaller;
  margin-left: 30rpx;
  color: #7e7b7b;
  /* background-color: green; */
}
.aq .icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}
.aq .arrow{
  width: 40rpx;
  height: 40rpx;
  margin-left: 300rpx;
}
